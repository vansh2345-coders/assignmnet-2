#include<iostream>
#include<string>
#include<algorithm>
using namespace std;
int main()
{

string str="vansh jain";
cout<<str;
cout<<endl;
//Write a program to convert a character from uppercase to lowercase
int arr[str.length()];
for(int i=0;i<str.length();i++){
    arr[i] =int(str[i]);
}
for(int i=0;i<str.length();i++){
    cout<<arr[i]<<" ";
}
cout<<endl;

for(int i=0;i<str.length();i++){
    arr[i]=arr[i]-32;
}
cout<<endl;


for(int i=0;i<str.length();i++){
    cout<<char(arr[i])<<" ";
}

   returnÂ 0;
}
