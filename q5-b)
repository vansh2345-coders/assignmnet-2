#include<iostream>
using namespace std;
int main()
{
    int n;
    cin>>n;
    int arr[n*(n+1)/2];

    for(int i=0;i<n;i++){
        for(int j=0;j<=i;j++){
            cin>>arr[i*(i+1)/2 + j];
        }
    }
    for(int i=0;i<n;i++){
        for(int j=0;j<n;j++){
            if(i>=j){
                cout<<arr[i*(i+1)/2 + j]<<" ";
            }
            else{
                cout<<"0"<<" ";
            }
            
        }
        cout<<endl;
    }




    return 0;
}
