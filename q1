#include <iostream>
using namespace std;

int main() {
    int arr[] = {2, 4, 7, 10, 15};  // sorted array
    int n = 5, key;
    cout << "Enter number to search: ";
    cin >> key;

    int low = 0, high = n - 1, mid;
    while (low <= high) {
        mid = (low + high) / 2;
        if (arr[mid] == key) {
            cout << "Found at index " << mid << endl;
            return 0;
        }
        else if (arr[mid] < key)
            low = mid + 1;
        else
            high = mid - 1;
    }

    cout << "Not found" << endl;
    return 0;
}
