#include<iostream>
using namespace std;
int main()
{
//Find two numbers in an array whose difference equals K. Given an array arr[] and a positive 
//integer k, the task is to count all pairs (i, j) such that i < j and absolute value of (arr[i] - arr[j]) 
//is equal to k. 
int arr[6]={1,5,7,9,11,19};
int k=2;
int count=0;
int idx=0;
for(int i=0;i<6;i++){
for(int j=i+1;j<6;j++){
if(arr[j]-arr[i]==k){
    cout<<"("<<arr[i]<<" "<<arr[j]<<")"<<endl;
    count++;
}
}

}
cout<<count;







    return 0;
